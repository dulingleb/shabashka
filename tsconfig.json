{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
    //   "strict": true,
      "jsx": "preserve",
      "importHelpers": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "baseUrl": ".",
      "types": [
        "webpack-env"
      ],
      "paths": {
        "@/*": [
          "src/*"
        ]
      },
      "lib": [
        "esnext",
        "dom",
        "dom.iterable",
        "scripthost"
      ]
    },
    "include": [
        "resources/js/**/*"
    ],
    "files": [
        "./ts-shim.d.ts", "./resources/js/__global.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  